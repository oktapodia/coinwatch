    "@types/tapable": "^2.2.2",
    "@types/vfile-message": "^2.0.0",
    "@types/webpack": "^5.28.0",
    "@types/webpack-env": "^1.16.3",
    "browserslist-config-erb": "^0.0.3",
    "chalk": "^4.1.2",
    "concurrently": "^6.3.0",
